{
  "name": "@estebancdev/react-tailwind-ui",
  "version": "0.1.6",
  "description": "LibrerÃ­a de componentes React + Tailwind (sin dependencias a la app, lista para npm).",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./button": {
      "types": "./dist/button.d.ts",
      "import": "./dist/button.mjs",
      "require": "./dist/button.cjs",
      "default": "./dist/button.mjs"
    },
    "./input": {
      "types": "./dist/input.d.ts",
      "import": "./dist/input.mjs",
      "require": "./dist/input.cjs",
      "default": "./dist/input.mjs"
    },
    "./select": {
      "types": "./dist/select.d.ts",
      "import": "./dist/select.mjs",
      "require": "./dist/select.cjs",
      "default": "./dist/select.mjs"
    },
    "./card": {
      "types": "./dist/card.d.ts",
      "import": "./dist/card.mjs",
      "require": "./dist/card.cjs",
      "default": "./dist/card.mjs"
    },
    "./modal": {
      "types": "./dist/modal.d.ts",
      "import": "./dist/modal.mjs",
      "require": "./dist/modal.cjs",
      "default": "./dist/modal.mjs"
    },
    "./badge": {
      "types": "./dist/badge.d.ts",
      "import": "./dist/badge.mjs",
      "require": "./dist/badge.cjs",
      "default": "./dist/badge.mjs"
    },
    "./alert": {
      "types": "./dist/alert.d.ts",
      "import": "./dist/alert.mjs",
      "require": "./dist/alert.cjs",
      "default": "./dist/alert.mjs"
    },
    "./tabs": {
      "types": "./dist/tabs.d.ts",
      "import": "./dist/tabs.mjs",
      "require": "./dist/tabs.cjs",
      "default": "./dist/tabs.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "prepack": "npm run clean ; npm run build",
    "dev": "tsup --watch",
    "release:patch": "npm version patch ; npm publish --access public",
    "release:minor": "npm version minor ; npm publish --access public",
    "release:major": "npm version major ; npm publish --access public"
  },
  "peerDependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "lucide-react": ">=0.300.0 <2",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "tailwindcss": "^3.4 || ^4"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "react",
    "tailwindcss",
    "ui",
    "components",
    "radix-ui",
    "nextjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/estebancastano/react-tailwind-ui"
  },
  "bugs": {
    "url": "https://github.com/estebancastano/react-tailwind-ui/issues"
  },
  "homepage": "https://github.com/estebancastano/react-tailwind-ui#readme",
  "publishConfig": {
    "access": "public"
  }
