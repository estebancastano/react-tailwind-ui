{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
